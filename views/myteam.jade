doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title #{title}
    meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no', name='viewport')
    link(rel='stylesheet', href='bootstrap/css/bootstrap.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css')
    link(rel='stylesheet', href='dist/css/AdminLTE.css')
    link(rel='stylesheet', href='dist/css/skins/_all-skins.min.css')
    link(rel='stylesheet', href='plugins/iCheck/flat/blue.css')
    link(rel='stylesheet', href='plugins/morris/morris.css')
    link(rel='stylesheet', href='plugins/jvectormap/jquery-jvectormap-1.2.2.css')
    link(rel='stylesheet', href='plugins/datepicker/datepicker3.css')
    link(rel='stylesheet', href='plugins/daterangepicker/daterangepicker-bs3.css')
    link(rel='stylesheet', href='plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css')
    link(rel='stylesheet', href='stylesheets/style.css')
    script(src='https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js')
    script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
  body.hold-transition.skin-purple.sidebar-mini(style="background-color:#2C3B41;")
      //************ S T A R T  O F  N A V ***************//
      if session == ''
            aside.main-sidebar
              section.sidebar
                .user-panel.sidebar-header-top
                    a(href="/home")
                      img(src='./images/Reddit_Ladder_League01.png' class="brand-logo")
                  ul.sidebar-menu
                    li.header.sidebar-header(style="font-size: 20px; color:white;") Menu
                    li
                      a(href='/home')
                        span Home
                    li
                      a(href='/rules')
                        span Rules
                    li
                      a(href='/support')
                        span Support
                    li
                      a(href='/sponsor')
                        span Sponser
                    li
                      a(href='/volunteer')
                        span Volunteer
                    li.header.sidebar-header(style="font-size: 20px; color:white;") Teams
                    li
                      a(href='/teamdb')
                        span Team Database
                    li
                      a(href='/findteam')
                        span Find a Team
                    li.header.sidebar-header(style="font-size: 20px; color:white;") Matches
                    li
                      a(href='/schedule')
                        span Match Schedule
                    li.header.sidebar-header(style="font-size: 20px; color:white;") Account
                    li
                      .pull-left.image
                        a(href='/login')
                            img(src='./images/steam_login.png' class="login-button")
      else                
        aside.main-sidebar
          section.sidebar
            .user-panel
                a(href="/home")
                      img(src='./images/Reddit_Ladder_League01.png' class="brand-logo")
                .pull-left.image
                    img.img-circle(src='http://www.allthatsepic.com/wp-content/uploads/2013/09/Gabe-Newell-160x160.jpg', alt='User Image')
                .pull-left.info 
                    p #{username}
                    a(href='#')
                        i.fa.fa-circle.text-success(style="color: #00E676;")
                        |  Online
              ul.sidebar-menu
                li.header.sidebar-header(style="font-size: 20px; color:white;") Menu
                li
                  a(href='/home')
                    span Home
                li
                  a(href='/rules')
                    span Rules
                li
                  a(href='/support')
                    span Support
                li
                  a(href='/sponser')
                    span Sponser
                li
                  a(href='/volunteer')
                    span Volunteer
                li.header.sidebar-header(style="font-size: 20px; color:white;") Teams
                li
                  a(href='/teamdb')
                    span Team Database
                li
                  a(href='/myteam')
                    span My Team
                li
                  a(href='/findteam')
                    span Find a Team
                li.header.sidebar-header(style="font-size: 20px; color:white;") Matches
                li
                  a(href='/mymatches')
                    span My Matches
                li
                  a(href='/requestmatch')
                    span Request Match
                li
                  a(href='/schedule')
                    span Match Schedule
                li
                  a(href='/submitmatchresult')
                    span Submit Match Result
                li
                  a(href='/editupcomingmatch')
                    span Edit Upcoming Match
                li.header.sidebar-header(style="font-size: 20px; color:white;") Account
                li
                  a(href='/myprofile')
                    span My Profile
                li
                  .pull-left.image
                    a(href='/logout')
                      img(src="./images/steam_logout.png" class="login-button")   
      //************ E N D  O F  N A V ***************//
      .content-wrapper
        section.content-header
          .container

    script(src='plugins/jQuery/jQuery-2.1.4.min.js')
    script(src='https://code.jquery.com/ui/1.11.4/jquery-ui.min.js')
    script.
      $.widget.bridge('uibutton', $.ui.button);
    script(src='bootstrap/js/bootstrap.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js')
    script(src='plugins/morris/morris.min.js')
    script(src='plugins/sparkline/jquery.sparkline.min.js')
    script(src='plugins/jvectormap/jquery-jvectormap-1.2.2.min.js')
    script(src='plugins/jvectormap/jquery-jvectormap-world-mill-en.js')
    script(src='plugins/knob/jquery.knob.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.2/moment.min.js')
    script(src='plugins/daterangepicker/daterangepicker.js')
    script(src='plugins/datepicker/bootstrap-datepicker.js')
    script(src='plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js')
    script(src='plugins/slimScroll/jquery.slimscroll.min.js')
    script(src='plugins/fastclick/fastclick.min.js')
    script(src='dist/js/app.min.js')
